{
  "vector_backend": "faiss",
  "auto_index": true,
  "index_chunk_size": 500,

  "storage": {
    "vector_store_path": "./memory/vector_store",
    "use_faiss": true,
    "use_chroma": false,
    "local_index_path": "./memory/local_index",
    "metadata_db": "./memory/local_index/metadata.db",
    "log_dir": "./data/logs/",
    "training_data_path": "./data/nlp_training_sets/"
  },

  "embedding": {
    "model": "all-MiniLM-L6-v2",
    "dimension": 384,
    "source": "sentence-transformers",
    "format": "float32",
    "batch_size": 250,
    "normalize_vectors": true,
    "retain_raw_text": true,
    "allow_replaceable": true,
    "fallback_model": "bert-base-uncased"
  },

  "tagging": {
    "auto_tag_enabled": true,
    "default_tags": {
      "model": "MiniLM",
      "replaceable": true,
      "source": "bootstrap-prebuilt"
    },
    "tag_strategies": [
      "source",
      "content_type",
      "semantic_topic",
      "agent",
      "mutation_type",
      "confidence_score"
    ]
  },

  "search": {
    "default_top_k": 10,
    "similarity_threshold": 0.75,
    "enable_semantic_boost": true,
    "fallback_to_keyword": true,
    "query_expansion": false
  },

  "persistence": {
    "snapshot_interval_min": 15,
    "backup_enabled": true,
    "backup_path": "./run/checkpoints/",
    "max_snapshots": 10,
    "rotation_policy": "fifo"
  },

  "diagnostics": {
    "log_queries": true,
    "log_embeddings": true,
    "profiling": true,
    "track_embedding_origins": true,
    "embedding_hash_check": true,
    "conflict_resolution": "merge"
  },

  "memory": {
    "short_term": [],
    "long_term": []
  }
}
